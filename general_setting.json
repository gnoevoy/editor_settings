{
    
    // VIM SETTINGS
    
    "vim.autoindent": true,
    "vim.foldfix": true,
    "vim.hlsearch": false,
    "vim.leader": "space",
    "vim.replaceWithRegister": true,
    "vim.startInInsertMode": false,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.mouseSelectionGoesIntoVisualMode": true,
    "vim.easymotion": true,  
    "vim.smartRelativeLine": false,     // relative lines while normal mode
    "vim.highlightedyank.color": "rgba(0, 120, 215, 0.5)",    
    "vim.highlightedyank.enable": true,
    
    // cursor style
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visual": "line",
    "vim.cursorStylePerMode.visualblock": "line",
    "vim.cursorStylePerMode.visualline": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "underline",
    
    // =================================================================================================
    
    // COMMANDS AND SHORTCUTS
    
    // NonRecursive (Prevent Infinite Loops + Have Higher Priority)
    
    // add alt y for redo (like ctrl y but for vim)
    
    "vim.normalModeKeyBindings": [],    
    "vim.insertModeKeyBindings": [],    
    "vim.visualModeKeyBindings": [],    
    "vim.operatorPendingModeKeyBindings": [],   
    "vim.commandLineModeKeyBindings": [],
    
    "vim.insertModeKeyBindingsNonRecursive": [],
    "vim.normalModeKeyBindingsNonRecursive": [],
    "vim.visualModeKeyBindingsNonRecursive": [],
    "vim.operatorPendingModeKeyBindingsNonRecursive": [],
    "vim.commandLineModeKeyBindingsNonRecursive": [],
    
    // Enable vim use its own commands with CTRL but be able to use dafault shortcuts
    // example: here's ctrl + v -> paste text 
    // to have logic that was in vim I should change such commadn there | "vim.normalModeKeyBindingsNonRecursive": [], |
    // *** may be potential error if my keybindings json will have ctrl + character ?
    

    
    "vim.useCtrlKeys": true,  
    "vim.overrideCopy": false, 
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-v>": false,
        "<C-a>": false,
        "<C-s>": false,
        "<C-z>": false,
        "<C-y>": false,
        "<C-f>": false,
        // delete key?
        
    },
    
    //
    "window.newWindowProfile": "Default",
    "workbench.panel.showLabels": false,
    "workbench.editor.enablePreview": false,
    "workbench.activityBar.location": "hidden",
    "window.menuBarVisibility": "compact",
    
    
    
