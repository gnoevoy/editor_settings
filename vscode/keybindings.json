[
    //
    //
    // EDITOR   ==================================================
    //
    //
    {
        // move between tabs (within all groups)
        "key": "alt+h",
        "command": "workbench.action.previousEditor",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.nextEditor",
        "when": "editorTextFocus"
    },
    {
        // move tab left and right (in a group)
        "key": "alt+shift+h",
        "command": "workbench.action.moveEditorLeftInGroup",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+l",
        "command": "workbench.action.moveEditorRightInGroup",
        "when": "editorTextFocus"
    },
    {
        // move tab ot left or right group
        "key": "alt+ctrl+h",
        "command": "workbench.action.moveEditorToPreviousGroup",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+ctrl+l",
        "command": "workbench.action.moveEditorToNextGroup",
        "when": "editorTextFocus"
    },
    {
        // Close group
        "key": "alt+shift+i",
        "command": "workbench.action.closeEditorsInGroup",
        "when": "editorTextFocus"
    },
    {
        // delete tab
        "key": "alt+i",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        // Move to next / previous group
        "key": "alt+shift+j",
        "command": "workbench.action.focusPreviousGroup",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+k",
        "command": "workbench.action.focusNextGroup",
        "when": "editorTextFocus"
    },
    {
        // Run python code in terminla
        "key": "alt+n",
        "command": "python.execInTerminal-icon"
    },
    {
        // select previous / next auto suggestion
        "key": "alt+,",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
    },
    {
        "key": "alt+.",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
    },
    {
        // Save file
        "key": "alt+s",
        "command": "workbench.action.files.save"
    },
    {
        // move selected lines of code up / down
        "key": "alt+,",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+.",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    //
    //
    // FILE TREE    =====================================================================
    //
    //
    {
        // Open / close File tree
        "key": "alt+k",
        "command": "workbench.view.explorer",
        "when": "!explorerViewletVisible"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletVisible"
    },
    {
        // Switch between editor and file tree
        "key": "alt+m",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "explorerViewletVisible"
    },
    {
        "key": "alt+m",
        "command": "workbench.view.explorer",
        "when": "editorTextFocus"
    },
    {
        // Create a new file
        "key": "alt+n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus"
    },
    {
        // Create a new folder
        "key": "alt+f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus"
    },
    {
        // Delete a file or folder
        "key": "alt+i",
        "command": "deleteFile",
        "when": "filesExplorerFocus && foldersViewVisible"
    },
    //
    //
    // TERMINAL     =====================================================================
    //
    //
    {
        // terminal
        "key": "alt+j",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },
    {
        // switch between editor and terminal
        "key": "alt+u",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "alt+u",
        "command": "workbench.action.terminal.focus",
        "when": "editorFocus"
    },
    {
        // Delete terminal
        "key": "alt+i",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        // Create a new terminal session
        "key": "alt+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        // Full-size terminal
        "key": "alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "terminalFocus"
    },
    {
        // Resize terminal window up / down
        "key": "alt+shift+l",
        "command": "workbench.action.terminal.resizePaneDown",
        "when": "terminalFocus"
    },
    {
        "key": "alt+shift+h",
        "command": "workbench.action.terminal.resizePaneUp",
        "when": "terminalFocus"
    },
    {
        // Switch to the next / previous terminal
        "key": "alt+l",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        // Scroll up and down in the terminal
        "key": "alt+.",
        "command": "workbench.action.terminal.scrollDown",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        "key": "alt+,",
        "command": "workbench.action.terminal.scrollUp",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        // Scroll by Page down / up in terminal
        "key": "shift+alt+.",
        "command": "workbench.action.terminal.scrollDownPage",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        "key": "shift+alt+,",
        "command": "workbench.action.terminal.scrollUpPage",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        // Scroll to the end / start of terminla session
        "key": "ctrl+alt+.",
        "command": "workbench.action.terminal.scrollToBottom",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        "key": "ctrl+alt+,",
        "command": "workbench.action.terminal.scrollToTopAccessibleView",
        "when": "accessibleViewIsShown && terminalHasBeenCreated && accessibleViewCurrentProviderId == 'terminal' || accessibleViewIsShown && terminalProcessSupported && accessibleViewCurrentProviderId == 'terminal'"
    },
    {
        "key": "ctrl+alt+,",
        "command": "workbench.action.terminal.scrollToTop",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    //
    //
    // GENERAL =====================================================================
    //
    //
    {
        // left pannel
        "key": "alt+1",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        // menu bar
        "key": "alt+2",
        "command": "workbench.action.toggleMenuBar"
    },
    {
        // Open settings (close ctrl + F4)
        "key": "alt+3",
        "command": "workbench.action.openSettings",
        "when": "!settingsViewVisible"
    },
    {
        // general palette
        "key": "shift+alt+p",
        "command": "workbench.action.showCommands"
    },
    {
        // File Finder
        "key": "alt+p",
        "command": "workbench.action.quickOpen"
    },
    {
        // Find Symbol in File
        "key": "alt+o",
        "command": "workbench.action.gotoSymbol"
    },
    {
        // navigate in a palette
        "key": "alt+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    }
]