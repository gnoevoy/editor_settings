{
    //
    //
    // UI   =================================================
    //
    //
    "workbench.sideBar.location": "left",
    "workbench.navigationControl.enabled": false,
    "workbench.editor.editorActionsLocation": "titleBar",
    "workbench.startupEditor": "none",
    "editor.renderWhitespace": "none",
    "diffEditor.hideUnchangedRegions.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "editor.renderControlCharacters": false,
    "explorer.confirmDragAndDrop": false,
    "breadcrumbs.enabled": false,
    "chat.commandCenter.enabled": false,
    "workbench.panel.showLabels": false,
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "workbench.activityBar.location": "hidden",
    //
    //
    // EDITOR   =============================================
    //
    //
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.wordWrapColumn": 240,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "json.format.keepLines": true,
    "editor.wordWrap": "on",
    //
    //
    // TERMINAL   =================================================
    //
    //
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.localEchoStyle": "dim",
    "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.cursorStyleInactive": "none",
    "terminal.integrated.cursorBlinking": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.suggest.quickSuggestions": false,
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.enabled": false,
    //
    //
    // VIM   =============================================
    //
    //
    "vim.autoindent": true,
    "vim.foldfix": true,
    "vim.leader": "space",
    "vim.replaceWithRegister": true,
    "vim.startInInsertMode": false,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.easymotion": true,
    "vim.smartRelativeLine": true,
    "vim.highlightedyank.color": "rgba(0, 120, 215, 0.5)",
    "vim.highlightedyank.enable": true,
    //
    // cursor style
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visual": "line",
    "vim.cursorStylePerMode.visualblock": "line",
    "vim.cursorStylePerMode.visualline": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "underline",
    "terminal.integrated.defaultProfile.linux": "zsh",
    //
    // default commands and copy pasting
    "vim.useCtrlKeys": true,
    "vim.overrideCopy": true,
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-v>": false,
        "<C-a>": false,
        "<C-s>": false,
        "<C-z>": false,
        "<C-y>": false,
        "<C-f>": false,
    },
    //
    //
}