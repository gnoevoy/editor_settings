{
    // GENERAL SETTING
    //
    // setting on apperance tab, cosmetic things
    "workbench.sideBar.location": "left",
    "workbench.navigationControl.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.startupEditor": "none",
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "none",
    "editor.wordWrapColumn": 160,
    "diffEditor.hideUnchangedRegions.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "editor.renderControlCharacters": false,
    "explorer.confirmDragAndDrop": false,
    "breadcrumbs.enabled": false,
    "editor.wordWrap": "on",
    "editor.formatOnPaste": true,
    //  
    // terminal settings 
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.minimumContrastRatio": 4.5,
    "terminal.integrated.localEchoStyle": "dim",
    "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.suggest.enabled": true,
    "terminal.integrated.suggest.enableExtensionCompletions": true,
    "terminal.integrated.cursorStyleInactive": "none",
    "terminal.integrated.cursorBlinking": false,
    "terminal.integrated.copyOnSelection": true,
    "workbench.layoutControl.enabled": false,
    "chat.commandCenter.enabled": false,
    "workbench.panel.showLabels": false,
    // 
    // 
    // python
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    //
    //
    // VIM SETTINGS
    "vim.autoindent": true,
    "vim.foldfix": true,
    "vim.hlsearch": false,
    "vim.leader": "space",
    "vim.replaceWithRegister": true,
    "vim.startInInsertMode": false,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.mouseSelectionGoesIntoVisualMode": true,
    "vim.easymotion": true,
    "vim.smartRelativeLine": false, // relative lines while normal mode
    "vim.highlightedyank.color": "rgba(0, 120, 215, 0.5)",
    "vim.highlightedyank.enable": true,
    // cursor style
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visual": "line",
    "vim.cursorStylePerMode.visualblock": "line",
    "vim.cursorStylePerMode.visualline": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "underline",
    "window.commandCenter": false,
    "terminal.integrated.defaultProfile.linux": "zsh",
    //
    //
    "workbench.activityBar.location": "hidden",
    "window.menuBarVisibility": "compact",
}